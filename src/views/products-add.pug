extends dashboard-base

block dashboard-content
    .container.flat-box.width-card
        h2 Add a new product
        form(role='form', action="/products/add", method="post", style='max-width: 300px;')
            .form-group
                input.form-control(type='text', name='name', placeholder='Product name')
                input.form-control(type='number', name='price', placeholder='Price in USD')
                input.form-control(type='number', name='weight', placeholder='Weight in pounds (Optional)')
            .form-group
                textarea.form-control(type='text', name='description', placeholder='Product description')
            button.width-100(type='submit') Save
            | &nbsp;
